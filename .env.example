# Server Configuration
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/email-queue
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/email-queue-dlq

# Email Configuration (placeholder for future email service integration)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@yourcompany.com

# Monitoring and Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/aws/lambda/email-processor

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100